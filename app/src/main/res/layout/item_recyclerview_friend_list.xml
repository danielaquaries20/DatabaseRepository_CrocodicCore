<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="friend"
            type="com.example.databaserepository_crocodiccore.database.friend.Friend" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_5"
        android:padding="@dimen/value_5"
        app:cardCornerRadius="@dimen/value_5"
        app:cardElevation="@dimen/value_5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_100"
            android:orientation="vertical"
            android:padding="@dimen/value_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_3"
                android:text='@{friend.name}'
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_3"
                android:text='@{friend.gender}'
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/value_3"
                android:text='@{friend.school}'
                android:textColor="@color/black"
                android:textSize="17sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>

